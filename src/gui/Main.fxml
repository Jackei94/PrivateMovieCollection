<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainController">
   <children>
      <HBox layoutX="50.0" layoutY="100.0" prefHeight="450.0" prefWidth="700.0">
         <children>
            <VBox prefHeight="450.0" prefWidth="345.0">
               <children>
                  <ListView fx:id="categoryView" prefHeight="400.0" prefWidth="345.0" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="categoryNewButton" mnemonicParsing="false" text="New">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="categoryEditButton" mnemonicParsing="false" text="Edit">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="categoryDeleteButton" mnemonicParsing="false" text="Delete">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </VBox>
            <VBox prefHeight="450.0" prefWidth="350.0">
               <children>
                  <ListView fx:id="movieView" prefHeight="400.0" prefWidth="345.0" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="movieNew" mnemonicParsing="false" onAction="#movieNewButton" text="New">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="movieEditButton" mnemonicParsing="false" onAction="#movieEditButton" text="Edit">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#movieDeleteButton" text="Delete">
                           <HBox.margin>
                              <Insets right="45.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="moviePlayButton" mnemonicParsing="false" text="Play movie in mediaplayer" />
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <TextField fx:id="searchField" layoutX="601.0" layoutY="37.0" onKeyPressed="#searchMovie" promptText="Search..." />
      <Label layoutX="50.0" layoutY="30.0" text="Team Awesome Sauce Movie Collection">
         <font>
            <Font name="Impact" size="30.0" />
         </font>
      </Label>
      <Button fx:id="exitApp" layoutX="721.0" layoutY="550.0" mnemonicParsing="false" onAction="#exitApp" text=":'C" />
   </children>
</AnchorPane>
